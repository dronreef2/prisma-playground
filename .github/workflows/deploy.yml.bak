name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main # ou o nome da sua branch principal

# PermissÃµes necessÃ¡rias para o GitHub Actions
permissions:
  contents: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    
    steps:      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v3

      - name: Setup Node.js âš™ï¸
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'npm'
          
      - name: Install Dependencies ğŸ“¦
        run: npm ci
        
      - name: Build and Export ğŸ”§
        run: npm run deploy:github
        env:
          # VariÃ¡veis de ambiente mock para o build
          DATABASE_URL: ${{ secrets.DATABASE_URL || 'postgresql://postgres:postgres@localhost:5432/postgres' }}
          DIRECT_URL: ${{ secrets.DIRECT_URL || 'postgresql://postgres:postgres@localhost:5432/postgres' }}
          
      - name: Add .nojekyll file ğŸš«
        run: touch out/.nojekyll
        
      - name: Deploy ğŸš€
        uses: JamesIves/github-pages-deploy-action@v4.4.1
        with:
          branch: gh-pages # branch onde os arquivos estÃ¡ticos serÃ£o publicados
          folder: out # pasta que contÃ©m os arquivos estÃ¡ticos
